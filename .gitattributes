# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts always use LF (Unix-style)
*.sh text eol=lf

# Python files always use LF
*.py text eol=lf

# Windows batch files always use CRLF
*.bat text eol=crlf

# Markdown files use LF
*.md text eol=lf

# JSON files use LF
*.json text eol=lf

# YAML files use LF
*.yml text eol=lf
*.yaml text eol=lf

# Dockerfile uses LF
Dockerfile text eol=lf
.dockerignore text eol=lf
