# === SEGURANÇA ===
SECRET_KEY=django-insecure-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# === BANCO DE DADOS ===
# Escolha: 'sqlite' (desenvolvimento) ou 'postgresql' (produção)
DB_ENGINE=sqlite

# Se usar PostgreSQL, descomente e configure:
# DB_ENGINE=postgresql
# DB_NAME=email_classifier_db
# DB_USER=postgres
# DB_PASSWORD=postgres_password_change_in_production
# DB_HOST=db       # use 'localhost' sem Docker, 'db' com Docker
# DB_PORT=5432

# === CACHE ===
# Use False para cache em banco (sem Redis), True para Redis
USE_REDIS=False

# Se usar Redis, descomente:
# USE_REDIS=True
# REDIS_URL=redis://localhost:6379/0  # ou redis://redis:6379/0 no Docker

# === AUTENTICAÇÃO API ===
API_KEYS=dev_test_key_123

# === IA/HUGGINGFACE (OPCIONAL) ===
# Token do Hugging Face para geração de respostas com IA
HF_API_KEY=

# === CORS ===
# URLs permitidas para requisições (frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# === LOGS (OPCIONAL) ===
# Níveis: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO
